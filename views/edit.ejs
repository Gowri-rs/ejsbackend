<!DOCTYPE html>
<html>
<head>
  <title>Edit Employee</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-4">
  <h3>Edit Employee</h3>

  <form action="/update/<%= employee._id %>" method="POST">
    <input class="form-control mb-2" name="employeeName" value="<%= employee.employeeName %>">
    <input class="form-control mb-2" name="employeeDesignation" value="<%= employee.employeeDesignation %>">
    <input class="form-control mb-2" name="employeeLocation" value="<%= employee.employeeLocation %>">
    <input class="form-control mb-2" name="salary" value="<%= employee.salary %>">

    <button class="btn btn-success">Update</button>
  </form>
</div>

</body>
</html>
